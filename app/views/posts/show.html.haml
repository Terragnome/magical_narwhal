.show
  =render partial:'post', object:@post
-if @post.previous || @post.next
  .navigation
    -if @post.previous
      =link_to("PREVIOUS", post_url(@post.previous.id), 'data-push'=>true, :id=>'previous_post')
    -if @post.next
      =link_to("NEXT", post_url(@post.next.id), 'data-push'=>true, :id=>'next_post')