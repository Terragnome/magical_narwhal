.post
  .header
    -if post.user.icon
      =link_to image_tag(post.user.icon, :class=>'icon'), user_path(post.user.nickname)
    %h1
      =post.title.upcase
    .info_section
      =link_to(user_path(post.user.nickname)) do
        .info
          =image_tag('/assets/icons/info.png')
          .text
            =post.user.nickname
      .info
        =image_tag('/assets/icons/calendar.png')
        .text.date
          =post.display_time
  %p.body
    =post.body.html_safe
  .spacer
  .actions
    %a{:id=>'comment_button'}
      COMMENT
    =link_to('SHARE')
    -if post.tag_list.count>0
      .tags.right
        .tags_title
          TAGS
        -post.tag_list.each do |tag|
          =link_to(tag.upcase, tag_archive_path(tag))
  .spacer
    .fb-comments{'data-href'=>'http://example.com/comments', 'data-numposts'=>'5', 'data-colorscheme'=>'light', :style=>'display:none;'}