.post
  .header
    -if post.user.icon
      =link_to image_tag(post.user.icon, :class=>'icon'), user_path(post.user.nickname)
    %h1
      =post.title.upcase
    %div
      .info
        =image_tag('/assets/icons/info.png')
        .text
          =link_to(post.user.nickname, user_path(post.user.nickname))
      .info
        =image_tag('/assets/icons/calendar.png')
        .text
          =post.display_time
    -if post.subtitle
      .subtitle
        =post.subtitle
  %p.body
    =post.body.html_safe