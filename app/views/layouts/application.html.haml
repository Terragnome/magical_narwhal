!!! html
%html
  %head
    %title
      =@app_title
    =stylesheet_link_tag    "application", media:"all", "data-turbolinks-track"=>true
    =javascript_include_tag "application", "data-turbolinks-track"=>true
    =csrf_meta_tags
    %meta{:name=>'viewport', :content=>'width=device-width, initial-scale=1.0'}
  %body
    #popups
    #blocker
    #fb-root
    =render :partial=>'layouts/header', :object=>@app_title_components
    #scene{:style=>"overflow:#{is_mobile_device? ? 'visible' : 'scroll'};"}
      #scene_spacer
        #scene_content
          #scene_body_spacing
            #scene_body
              =yield
          #scene_footer_spacing
    =render :partial=>'layouts/footer'