!!! html
%html
%head
  %title
    TITLE
  = stylesheet_link_tag    "application", media:"all", "data-turbolinks-track"=>true
  = javascript_include_tag "application", "data-turbolinks-track"=>true
  =csrf_meta_tags

%body
  #header
    .logo
      .title
        TITLE
      =image_tag('/assets/avatars/mikey.png')
    .links
      =link_to('LATEST', latest_path, :class=>'latest')
      =link_to('ARCHIVE', archive_path)
  #scene
    .scene_body
      =yield
    .spacer
    #footer
      =link_to('ABOUT', about_path)
      =link_to('CONTACT', contact_path)
      =link_to('PRIVACY', privacy_path)
      =link_to('TERMS', terms_path)

  #subscribe
    =link_to image_tag('/assets/icons/twitter.png'), "http://www.twitter.com"
    =link_to image_tag('/assets/icons/facebook.png'), "http://www.facebook.com/pages/"
    =link_to image_tag('/assets/icons/rss.png'), feed_path