#header
  .logo
    =link_to(root_path, :remote=>true) do
      =image_tag('/assets/avatars/mikey.png')
    .links
      .link
        =link_to('LATEST', latest_path, :class=>'latest', :remote=>true)
      .link
        =link_to('ARCHIVE', archive_path, :remote=>true)
    .title
      -title=""
      -header.count.times do |i|
        -title << (i%2 == 0 ? "<span style='color:#0099cc;'>#{header[i]}</span>" : header[i])
      =title.html_safe
