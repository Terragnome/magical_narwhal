.user.clearfix
  -if user.icon
    =image_tag(user.icon, :class=>'icon')
  %h2
    =user.name.upcase
  .info_section
    -if user.email
      =mail_to(user.email) do
        .info
          =image_tag('/assets/icons/mail.png')
          .text
            =user.nickname
    -if user.twitter_id
      =link_to("http://twitter.com/#{user.twitter_id}") do
        .info
          =image_tag('/assets/icons/twitter.png')
          .text
            ="@#{user.twitter_id}"
  %p.body
    =user.profile
  .navigation
    =link_to("POSTS", user_archive_path(user.nickname))